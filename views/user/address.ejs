<%- include('../partials/user/header') %>
<!-- Begin Hiraola's Breadcrumb Area -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <h2>My Address Book</h2>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/profile">My Account</a></li>
                <li class="active">Addresses</li>
            </ul>
        </div>
    </div>
</div>
<!-- Hiraola's Breadcrumb Area End Here -->

<!-- Begin Hiraola's Page Content Area -->
<main class="page-content">
    <!-- Begin Hiraola's Account Page Area -->
    <div class="account-page-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <ul class="nav myaccount-tab-trigger" id="account-page-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="account-dashboard-tab" href="/profile" aria-controls="account-dashboard" aria-selected="false">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="account-orders-tab" href="/orders" aria-controls="account-orders" aria-selected="false">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" id="account-address-tab" href="#account-address" aria-controls="account-address" aria-selected="true">Addresses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="account-details-tab" href="/changepassword" aria-controls="account-details" aria-selected="false">Change Password</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="account-logout-tab" href="/logout" role="tab" aria-selected="false">Logout</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-9">
                    <div class="tab-content myaccount-tab-content" id="account-page-tab-content">
                        <div class="tab-pane fade show active" id="account-address" role="tabpanel" aria-labelledby="account-address-tab">
                            <div class="address-book-wrapper">
                                <div class="address-book-header">
                                    <h4 class="address-title">Address Book</h4>
                                    <a href="/createaddress" class="add-address-btn">Add New Address</a>
                                </div>
                                
                                <% if (address && address.length > 0) { %>
                                    <div class="address-list">
                                        <% address.forEach(function(address, index) { %>
                                            <div class="address-card <%= address.isDefault ? 'default-address' : '' %>">
                                                <% if (address.isDefault) { %>
                                                    <div class="default-badge">Default Address</div>
                                                <% } %>
                                                
                                                <div class="address-details">
                                                    <h5 class="address-name"><%= address.name %></h5>
                                                    <p class="address-phone"><%= address.mobile %></p>
                                                    <p class="address-text">
                                                        <% if (address.houseName && address.houseName.trim() !== '') { %><%= address.houseName %>, <% } %>
                                                        <% if (address.street && address.street.trim() !== '') { %><%= address.street %>, <% } %><br>
                                                        <% if (address.city && address.city.trim() !== '') { %><%= address.city %>, <% } %>
                                                        <% if (address.state && address.state.trim() !== '') { %><%= address.state %>, <% } %><br>
                                                        <% if (address.pincode && address.pincode.trim() !== '') { %><%= address.pincode %>, <% } %>
                                                        <% if (address.country && address.country.trim() !== '') { %><%= address.country %><% } %>
                                                    </p>
                                                    <span class="address-type"><%= address.saveAs %></span>
                                                </div>
                                                
                                                <div class="address-actions">
                                                    <a href="/address/edit/<%= address._id %>" class="edit-address">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>
                                                    <% if (!address.isDefault) { %>
                                                        <form action="/address/delete/<%= address._id %>" method="POST" class="delete-address-form">
                                                            <button type="submit" class="delete-address-btn">
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        </form>
                                                        <form action="/address/default/<%= address._id %>" method="POST" class="set-default-form">
                                                            <button type="submit" class="set-default-btn">Set as Default</button>
                                                        </form>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                <% } else { %>
                                    <div class="no-address-message">
                                        <p>You don't have any saved addresses yet.</p>
                                        <a href="/createaddress" class="add-first-address">Add Your First Address</a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hiraola's Account Page Area End Here -->
</main>
<!-- Hiraola's Page Content Area End Here -->

<style>
/* Address Book Styles */
.address-book-wrapper {
    background: #fff;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0,0,0,0.05);
    padding: 20px;
}

.address-book-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #eee;
}

.address-title {
    font-size: 18px;
    margin-bottom: 0;
}

.add-address-btn {
    display: inline-block;
    padding: 8px 16px;
    background-color: #333;
    color: #fff;
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s;
}

.add-address-btn:hover {
    background-color: #000;
    color: #fff;
}

.address-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
}

.address-card {
    position: relative;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 20px;
    transition: all 0.3s;
}

.address-card:hover {
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.default-address {
    border: 2px solid #4CAF50;
}

.default-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #4CAF50;
    color: white;
    padding: 3px 8px;
    font-size: 12px;
    border-radius: 3px;
}

.address-name {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 5px;
}

.address-phone {
    color: #666;
    margin-bottom: 10px;
}

.address-text {
    margin-bottom: 10px;
    line-height: 1.5;
}

.address-type {
    display: inline-block;
    padding: 2px 8px;
    background: #f0f0f0;
    border-radius: 3px;
    font-size: 12px;
    margin-bottom: 10px;
}

.address-actions {
    display: flex;
    gap: 10px;
    margin-top: 15px;
    align-items: center;
}

.edit-address, .delete-address-btn {
    background: none;
    border: none;
    color: #333;
    cursor: pointer;
    padding: 5px;
    transition: all 0.3s;
}

.edit-address:hover, .delete-address-btn:hover {
    color: #000;
}

.set-default-btn {
    background: #f0f0f0;
    border: none;
    padding: 5px 10px;
    border-radius: 3px;
    cursor: pointer;
    transition: all 0.3s;
    font-size: 12px;
}

.set-default-btn:hover {
    background: #e0e0e0;
}

.no-address-message {
    text-align: center;
    padding: 30px 0;
}

.add-first-address {
    display: inline-block;
    padding: 10px 20px;
    background-color: #333;
    color: #fff;
    border-radius: 4px;
    margin-top: 15px;
    text-decoration: none;
    transition: all 0.3s;
}

.add-first-address:hover {
    background-color: #000;
    color: #fff;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .address-list {
        grid-template-columns: 1fr;
    }
    
    .address-book-header {
        flex-direction: column;
        gap: 15px;
        align-items: flex-start;
    }
}
</style>

<%- include('../partials/user/footer') %>