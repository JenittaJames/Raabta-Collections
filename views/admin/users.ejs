<%- include('../partials/admin/header') %>

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title">Users List</h2>
            <p>Users Management</p>
        </div>
    </div>
    
    <!-- Search Container -->
    <div class="search-container" style="margin-bottom: 20px;">
        <form action="/admin/users" method="GET">
            <div style="display: flex; max-width: 500px;">
                <input 
                    type="text" 
                    name="query" 
                    placeholder="Search by username, email or phone..." 
                    style="flex: 1; padding: 8px; border: 1px solid #ddd; border-radius: 5px 0 0 5px;"
                    value="<%= locals.searchQuery || '' %>"
                >
                <button 
                    type="submit" 
                    style="background-color: #000000; color: white; padding: 8px 15px; border: none; border-radius: 0 5px 5px 0; cursor: pointer;"
                >
                    Search
                </button>
                <% if (locals.searchQuery) { %>
                    <a 
                        href="/admin/users" 
                        style="background-color: #f8f8f8; color: #333; padding: 8px 15px; border: 1px solid #ddd; border-left: none; text-decoration: none; display: flex; align-items: center;"
                    >
                        Clear
                    </a>
                <% } %>
            </div>
        </form>
    </div>

    <style>
        .users-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            border: 1px solid #000000;
        }
        
        .users-table th,
        .users-table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #000000;
        }
        
        .users-table th {
            background-color: #f8f8f8;
            font-weight: bold;
            color: #000000;
            border-bottom: 1px solid #000000;
        }
        
        .action-btn {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 5px;
            color: white;
            text-decoration: none;
            display: inline-block;
        }
        
        .delete-btn {
            background-color: #000000;
        }

        .pagination {
            margin-top: 20px;
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        .page-link {
            padding: 8px 12px;
            border: 1px solid #ddd;
            text-decoration: none;
            color: #333;
        }

        .page-link.active {
            background-color: #000000;
            color: white;
            border-color: #4a90e2;
        }
        
        .no-data {
            text-align: center;
            font-weight: bold;
            margin-top: 20px;
            font-size: 18px;
            color: #555;
        }
    </style>

    <% if (users.length>0) { %>
        <table class="users-table">
            <thead>
                <tr>
                    <th>SL.No</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.userName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.status ? "Active" : "Inactive" %></td>
                    <td>
                        <button onclick="confirmBlock('<%= user.id %>')" class="action-btn delete-btn">
                            <%= user.status ? "Block" : "UnBlock" %>
                        </button>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="no-data">No Users found</p>
    <% } %>
    
    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/admin/users?page=<%= currentPage - 1 %><%= locals.searchQuery ? '&query=' + searchQuery : '' %>" class="page-link">←</a>
        <% } %>
        
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/admin/users?page=<%= i %><%= locals.searchQuery ? '&query=' + searchQuery : '' %>" class="page-link <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>
        
        <% if (currentPage < totalPages) { %>
            <a href="/admin/users?page=<%= currentPage + 1 %><%= locals.searchQuery ? '&query=' + searchQuery : '' %>" class="page-link">→</a>
        <% } %>
    </div>
    
</section>

<%- include('../partials/admin/footer') %>

<script>
    function confirmBlock(userId) {
        Swal.fire({
            title: `Are you sure?`,
            text: `Do you want to continue?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#000000',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/block/${userId}`;
            }
        });
    }
</script>